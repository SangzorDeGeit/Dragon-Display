<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<interface>
    <template class="DdAddCampaignWindow" parent="GtkApplicationWindow">
        <property name="title">Add campaign</property>
        <child>
            <object class="GtkStack" id="stack">
                <child>
                    <object class="GtkStackPage" id="page1">
                        <property name="name">page1</property>
                        <property name="title">Name</property>
                        <property name="child">
                            <!-- Contents of page 1-->
                            <object class="GtkGrid">
                                <property name="column-spacing">6</property>
                                <property name="row-spacing">6</property>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Name the campaign</property>
                                        <layout>
                                            <property name="column">1</property>
                                            <property name="row">0</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkEntry" id="entry">
                                        <layout>
                                            <property name="column">1</property>
                                            <property name="row">1</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Cancel</property>
                                        <signal name="clicked" handler="handle_cancel"
                                            swapped="true" />
                                        <layout>
                                            <property name="column">0</property>
                                            <property name="row">2</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Next</property>
                                        <signal name="clicked" handler="handle_next_page1"
                                            swapped="true" />
                                        <layout>
                                            <property name="column">2</property>
                                            <property name="row">2</property>
                                        </layout>
                                    </object>
                                </child>
                                <property name="halign">center</property>
                                <property name="valign">center</property>
                            </object>
                            <!-- End page 1-->
                        </property>
                    </object>
                </child>
                <child>
                    <object class="GtkStackPage" id="page2">
                        <property name="name">page2</property>
                        <property name="title">Synchronization service</property>
                        <property name="child">
                            <!-- Contents of page 2-->
                            <object class="GtkGrid">
                                <property name="column-spacing">6</property>
                                <property name="row-spacing">6</property>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">Choose synchronization service</property>
                                        <layout>
                                            <property name="column">1</property>
                                            <property name="row">0</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkDropDown" id="dropdown">
                                        <property name="model">
                                            <object class="GtkStringList">
                                                <items>
                                                    <item>None</item>
                                                    <item>Google Drive</item>
                                                </items>
                                            </object>
                                        </property>
                                        <layout>
                                            <property name="column">1</property>
                                            <property name="row">1</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Cancel</property>
                                        <signal name="clicked" handler="handle_cancel"
                                            swapped="true" />
                                        <layout>
                                            <property name="column">0</property>
                                            <property name="row">2</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Back</property>
                                        <signal name="clicked" handler="handle_back"
                                            swapped="true" />
                                        <layout>
                                            <property name="column">1</property>
                                            <property name="row">2</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Next</property>
                                        <signal name="clicked" handler="handle_next_page2"
                                            swapped="true" />
                                        <layout>
                                            <property name="column">2</property>
                                            <property name="row">2</property>
                                        </layout>
                                    </object>
                                </child>
                                <property name="halign">center</property>
                                <property name="valign">center</property>
                            </object>
                            <!-- End page 2-->
                        </property>
                    </object>
                </child>
                <child>
                    <object class="GtkStackPage" id="page3">
                        <property name="name">page3</property>
                        <property name="title">Image Location</property>
                        <property name="child">
                            <!-- Contents of page 3-->
                            <object class="GtkGrid">
                                <property name="column-spacing">3</property>
                                <property name="row-spacing">3</property>
                                <child>
                                    <object class="GtkLabel">
                                        <property name="label">
<![CDATA[Choose a folder where the images will be stored. 'Default' will create and use a folder with the name of the campaign in the folder where the program is located]]>
                                        </property>
                                        <property name="wrap">true</property>
                                        <property name="wrap-mode">word</property>
                                        <property name="max-width-chars">50</property>
                                        <property name="justify">left</property>
                                        <property name="halign">center</property>
                                        <layout>
                                            <property name="column">0</property>
                                            <property name="row">0</property>
                                            <property name="column-span">6</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkLabel" id="location_label">
                                        <property name="wrap">true</property>
                                        <property name="wrap-mode">word</property>
                                        <property name="max-width-chars">50</property>
                                        <property name="justify">left</property>
                                        <property name="halign">center</property>
                                        <layout>
                                            <property name="column">0</property>
                                            <property name="row">1</property>
                                            <property name="column-span">6</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Choose</property>
                                        <signal name="clicked" handler="handle_choose"
                                            swapped="true" />
                                        <layout>
                                            <property name="column">0</property>
                                            <property name="row">2</property>
                                            <property name="column-span">3</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Default</property>
                                        <signal name="clicked" handler="handle_default"
                                            swapped="true" />
                                        <layout>
                                            <property name="column">3</property>
                                            <property name="row">2</property>
                                            <property name="column-span">3</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Cancel</property>
                                        <signal name="clicked" handler="handle_cancel"
                                            swapped="true" />
                                        <layout>
                                            <property name="column">0</property>
                                            <property name="row">3</property>
                                            <property name="column-span">2</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton">
                                        <property name="label">Back</property>
                                        <signal name="clicked" handler="handle_back"
                                            swapped="true" />
                                        <layout>
                                            <property name="column">2</property>
                                            <property name="row">3</property>
                                            <property name="column-span">2</property>
                                        </layout>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton" id="finish_button">
                                        <property name="label">Finish</property>
                                        <signal name="clicked" handler="handle_finish"
                                            swapped="true" />
                                        <layout>
                                            <property name="column">4</property>
                                            <property name="row">3</property>
                                            <property name="column-span">2</property>
                                        </layout>
                                    </object>
                                </child>
                                <property name="halign">center</property>
                                <property name="valign">center</property>
                            </object>
                            <!-- End page 3-->
                        </property>
                    </object>
                </child>
                <property name="visible_child_name">page1</property>
                <property name="transition-type">slide-left-right</property>
            </object>
        </child>
    </template>
</interface>
